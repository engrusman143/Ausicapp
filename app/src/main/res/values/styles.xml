<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--  ScrollView that holds description-->
    <style name="descriptionScroll" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@color/description_background</item>
    </style>
    <!-- Description of textView and close button-->
    <style name="descriptionContainer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- Description of TextView-->
    <style name="description" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:padding">@dimen/padding_description</item>
    </style>
    <!-- Close Button-->
    <style name="closeButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_description</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/close</item>
        <item name="android:background">@color/close_button</item>
        <item name="android:textColor">@color/close_button_color</item>
        <item name="android:layout_margin">@dimen/margin_close_button</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <!-- ScrollView That Holds the content -->
    <style name="ContentContainer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@color/blue</item>
    </style>
    <!-- This is the styling of Content of the App-->
    <style name="Content" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- music Category-->
    <style name="music" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/choose</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/close_button_color</item>
        <item name="android:drawableRight">@drawable/next</item>
    </style>
    <!--  Border style between activities-->
    <style name="borderStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/color_border</item>
    </style>
    <!--  Content Container in music -->
    <style name="musicContainer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- Songs Option -->
    <style name="songsOption" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/choose</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/close_button_color</item>
    </style>
    <!-- Music Player -->
    <style name="colorPlayButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/color_playButton</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <!-- Play and Pause Buttons -->
    <style name="PlayPauseButtons" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/close_button_color</item>
    </style>
    <!-- Vertical Border next to player -->
    <style name="VerticalBorder" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/close_button_color</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
    </style>
    <!-- LinearLayout that Holds the status TextView and now playing radio textView-->
    <style name="StatusContainer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- Style of status TextView-->
    <style name="StatusPlayButton" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/close_button_color</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- TextView that displays which song is playing in the player-->
    <style name="SongPlayingNow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/close_button_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
