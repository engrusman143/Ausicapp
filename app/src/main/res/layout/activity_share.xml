<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_share"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.ausicapp.shareActivity">

    <LinearLayout style="@style/musicContainer">

        <ScrollView
            android:id="@+id/description_share"
            style="@style/descriptionScroll">

            <LinearLayout style="@style/descriptionContainer">

                <TextView
                    style="@style/description"
                    android:text="@string/description_text_share" />

                <Button
                    android:id="@+id/closeButton"
                    style="@style/closeButton" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>